---
import ButtonIsland from './ButtonIsland.astro';
import { Tilt } from './Tilt';

interface Props {
  text?: string;
  type?: 'button' | 'submit' | 'reset';
  onClick?: string;
  disabled?: boolean;
  class?: string;
  href?: string;
}

const props = Astro.props;
---

<Tilt 
  client:visible
  rotationFactor={1.5}
  style={{ transformOrigin: 'center center' }}
>
  <ButtonIsland {...props} variant="primary" />
</Tilt>
