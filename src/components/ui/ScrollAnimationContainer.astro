---
import ScrollAnimation from './ScrollAnimation.tsx';

export interface Props {
  delay?: number;
  duration?: number;
  y?: number;
  x?: number;
  scale?: number;
  opacity?: number;
  blur?: number;
  className?: string;
  threshold?: number;
  once?: boolean;
}

const {
  delay = 0,
  duration = 0.6,
  y = 20,
  x = 0,
  scale = 1,
  opacity = 0,
  blur = 0,
  className = '',
  threshold = 0.1,
  once = true
} = Astro.props;
---

<ScrollAnimation 
  delay={delay}
  duration={duration}
  y={y}
  x={x}
  scale={scale}
  opacity={opacity}
  blur={blur}
  className={className}
  threshold={threshold}
  once={once}
  client:load
>
  <slot />
</ScrollAnimation>
