---
import MainButton from '../../ui/MainButton.astro';
import LampLight from '../../ui/LampLight.astro';
import ScrollReveal from '../../ui/ScrollReveal.astro';
import { getLangFromUrl } from '../../../i18n/utils.js';
import { translations } from '../../../i18n/translations.js';
import styles from './Sbanner.module.css';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class={styles['services-banner']}>
  <div class={styles['lamp-decoration']} style="padding-top: 50px;">
    <LampLight lightColor="#D0DF00" intensity="medium" />
  </div>
  <div class={styles.container}>
    <div class={styles['content-wrapper']}>
      <!-- Left Column: Title -->
      <div class={styles['title-column']}>
        <div class={styles.subtitle}>{t.services.banner.subtitle}</div>
        <ScrollReveal
          text={t.services.banner.title}
          tag="h1"
          textClass="main-title"
          baseOpacity={0.15}
          baseRotation={5}
          blurStrength={6}
          enableBlur={true}
        />
      </div>

      <!-- Right Column: Description and CTA -->
      <div class={styles['content-column']}>
        <div class={styles.description}>
          <p>
            {t.services.banner.description}
          </p>
        </div>

        <MainButton
          text={t.services.banner.buttonText}
          href="#servicios"
        />
      </div>
    </div>
  </div>
</section>


