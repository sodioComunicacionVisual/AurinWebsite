---
import MainButton from '../../ui/MainButton.astro';
import { getLangFromUrl } from '../../../i18n/utils.js';
import { translations } from '../../../i18n/translations.js';
import styles from './Introduction.module.css';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class={styles.introduction}>
    <div class={styles.container}>
        <div class={styles.content}>
            <div class={styles.headingWrapper}>
                <h2 class={styles.heading}>
                    <span class={styles.headingLight}>{t.projects.introduction.headingLight} <br/></span>
                    <span class={styles.headingHighlight}>{t.projects.introduction.headingHighlight}</span>
                </h2>
                <p class={styles.description}>
                    {t.projects.introduction.description}
                </p>
            </div>
            <div class={styles.ctaWrapper}>
                <MainButton text={t.projects.introduction.ctaButton} href="#contacto" />
            </div>
        </div>
    </div>
</section>

