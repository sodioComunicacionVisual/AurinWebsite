---
import MainButton from '../../ui/MainButton.astro';
import { getLangFromUrl } from '../../../i18n/utils.js';
import { translations } from '../../../i18n/translations.js';
import styles from './RutasInexploradas.module.css';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class={styles['rutas-inexploradas']}>
  <div class={styles['rutas-container']}>
    <!-- Título -->
    <div class={styles['title-wrapper']}>
      <h2 class={styles['rutas-title']}>
        <span class={styles['title-normal']}>{t.about.rutasInexploradas.titleNormal}</span><br/>
        <span class={styles['title-highlight']}>{t.about.rutasInexploradas.titleHighlight}</span>
      </h2>
    </div>

    <!-- Contenido -->
    <div class={styles['content-wrapper']}>
      <div class={styles['text-columns']}>
        <p class={styles['column-text']}>
          {t.about.rutasInexploradas.paragraph1}
        </p>
        <p class={styles['column-text']}>
          {t.about.rutasInexploradas.paragraph2}
        </p>
      </div>

      <!-- Botón -->
      <div class={styles['button-wrapper']}>
        <MainButton
          text={t.about.rutasInexploradas.buttonText}
          href="/contacto"
        />
      </div>
    </div>
  </div>
</section>


