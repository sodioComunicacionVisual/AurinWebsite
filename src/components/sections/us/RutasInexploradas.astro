---
import MainButton from '../../ui/MainButton.astro';
import { getLangFromUrl } from '../../../i18n/utils.js';
import { translations } from '../../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class="rutas-inexploradas">
  <div class="rutas-container">
    <!-- Título -->
    <div class="title-wrapper">
      <h2 class="rutas-title">
        <span class="title-normal">{t.about.rutasInexploradas.titleNormal}</span><br/>
        <span class="title-highlight">{t.about.rutasInexploradas.titleHighlight}</span>
      </h2>
    </div>

    <!-- Contenido -->
    <div class="content-wrapper">
      <div class="text-columns">
        <p class="column-text">
          {t.about.rutasInexploradas.paragraph1}
        </p>
        <p class="column-text">
          {t.about.rutasInexploradas.paragraph2}
        </p>
      </div>

      <!-- Botón -->
      <div class="button-wrapper">
        <MainButton 
          text={t.about.rutasInexploradas.buttonText}
          href="/contacto"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .rutas-inexploradas {
    width: 100%;
    background: var(--color-black-a);
    padding-block: clamp(5rem, 12.5vw, 12.5rem);
    padding-inline: clamp(1.25rem, 3.125vw, 3.125rem);
    overflow: hidden;
  }

  .rutas-container {
    max-width: var(--maxWidth);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: clamp(1.5rem, 2.625vw, 2.625rem);
  }

  /* Título */
  .title-wrapper {
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  .rutas-title {
    margin: 0;
    line-height: 1.1;
  }

  .title-normal {
    color: var(--color-white);
    font-size: clamp(1.25rem, 2vw, 2rem);
    font-family: var(--font-heading);
    font-weight: 300;
    line-height: 1.1;
  }

  .title-highlight {
    color: var(--color-yellow);
    font-size: clamp(1.75rem, 3vw, 3rem);
    font-family: var(--font-heading);
    font-weight: 300;
    line-height: 1.05;
  }

  /* Contenido */
  .content-wrapper {
    width: 100%;
    padding-left: clamp(0rem, 22%, 18.75rem);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: clamp(1.875rem, 2.5vw, 2.5rem);
  }

  .text-columns {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    gap: clamp(2.5rem, 5.125vw, 5.125rem);
    flex-wrap: wrap;
  }

  .column-text {
    flex: 1;
    min-width: min(100%, 18.75rem);
    max-width: 27.9375rem;
    color: var(--color-white);
    font-size: clamp(1rem, 1.25vw, 1.25rem);
    font-family: var(--font-body);
    font-weight: 400;
    line-height: 1.5;
    word-wrap: break-word;
    margin: 0;
  }

  .button-wrapper {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .content-wrapper {
      padding-left: 0;
    }
  }

  @media (max-width: 768px) {
    .text-columns {
      flex-direction: column;
    }

    .column-text {
      max-width: 100%;
    }
  }
</style>
