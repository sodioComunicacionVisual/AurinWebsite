---
import ProjectCard from '../../ui/ProjectCard.astro';
import ButtonIsland from '../../ui/ButtonIsland.astro';
import ScrollReveal from '../../ui/ScrollReveal.astro';
import { getLangFromUrl } from '../../../i18n/utils.js';
import { translations } from '../../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class="projects">
  <div class="projects-container">
    <!-- Header section -->
    <div class="header-section">
      <ScrollReveal 
        text={t.projects.heading}
        tag="h2"
        textClass="heading"
        containerClass="heading-wrapper"
        baseOpacity={0.15}
        baseRotation={5}
        blurStrength={6}
        enableBlur={true}
      />
      
      <ButtonIsland 
        text={t.projects.buttonText}
        href={currentLang === 'es' ? '/proyectos' : '/en/projects'}
        variant="primary"
      />
    </div>
    
    <!-- Projects grid -->
    <div class="projects-grid">
      <ProjectCard 
        title="Galicia"
        tags={[t.projects.tags.uxui, t.projects.tags.frontBack]}
        image="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/ProjectGalicia.webp"
        href="/proyectos/galicia"
      />
      
      <ProjectCard 
        title="Sinfonica de<br/>Minería"
        tags={[t.projects.tags.uxui, t.projects.tags.frontBack]}
        image="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/ProjectSinfonica.webp"
        href="/proyectos/sinfonica"
      />
      
      <ProjectCard 
        title="SAI Derecho y economía"
        tags={[t.projects.tags.uxui, t.projects.tags.frontBack]}
        image="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/ProjectSai.webp"
        href="/proyectos/sai"
      />
    </div>
  </div>
</section>

<style>
  .projects {
    background: var(--color-black-a);
    padding: 200px 50px;
    overflow: hidden;
  }

  .projects-container {
    max-width: var(--maxWidth);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 50px;
  }

  /* Header section */
  .header-section {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 50px;
    flex-wrap: wrap;
  }

  :global(.heading-wrapper) {
    flex: 1;
    max-width: 488px;
  }

  :global(.heading) {
    margin: 0 !important;
  }

  :global(.heading .scroll-reveal-word:nth-child(1)),
  :global(.heading .scroll-reveal-word:nth-child(2)),
  :global(.heading .scroll-reveal-word:nth-child(3)),
  :global(.heading .scroll-reveal-word:nth-child(4)),
  :global(.heading .scroll-reveal-word:nth-child(5)),
  :global(.heading .scroll-reveal-word:nth-child(6)) {
    color: var(--color-white) !important;
    font-size: var(--heading-5-size) !important;
    font-family: var(--font-heading) !important;
    font-weight: 300 !important;
    line-height: var(--heading-5-line-height) !important;
  }

  :global(.heading .scroll-reveal-word:nth-child(n+7)) {
    color: var(--color-yellow) !important;
    font-size: var(--heading-2-size) !important;
    font-family: var(--font-heading) !important;
    font-weight: 300 !important;
    line-height: var(--heading-2-line-height) !important;
  }

  /* Projects grid */
  .projects-grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 26px;
    justify-items: stretch;
  }

  .projects-grid :global(.project-card) {
    width: 100%;
    height: auto;
  }

  /* Responsive adjustments */
  @media (max-width: 1400px) {
    .projects {
      padding: 40px 40px;
    }

    .header-section {
      gap: 30px;
    }

    .projects-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects {
      padding: 40px 30px;
    }

    .header-section {
      flex-direction: column;
      align-items: flex-start;
      gap: 30px;
    }

    .heading {
      max-width: 100%;
      width: 100%;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }

  @media (max-width: 480px) {
    .projects {
      padding: 30px 20px;
    }

    .header-section {
      gap: 20px;
    }

    .heading {
      width: 100%;
    }

    .heading-normal {
      font-size: 24px;
      line-height: 28px;
    }

    .heading-highlight {
      font-size: 36px;
      line-height: 40px;
    }

    .projects-grid {
      gap: 20px;
    }
  }
</style>
