---
// Infinite Slider Marquee - Astro Island with Motion Dev
// Uses client:load for interactive animation
const LOGOS = [
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/AntojosSabores.svg", alt: "Antojos Sabores Logo", height: 43 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/Galicia.svg", alt: "Galicia Logo", height: 36 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/InglesIndividual.svg", alt: "Inglés Individual Logo", height: 43 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/Latiz.svg", alt: "Latiz Logo", height: 36 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/MexicoPacific.svg", alt: "Mexico Pacific Logo", height: 43 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/Pinnacle.svg", alt: "Pinnacle Logo", height: 40 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/SinfonicadeMineria.svg", alt: "Sinfónica de Minería Logo", height: 43 },
  { src: "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/TioFrancisco%20.svg", alt: "Tío Francisco Logo", height: 40 },
];
---

<section class="enterprise-marquee">
  <div class="marquee-wrapper">
    <div class="marquee-content">

      
      <!-- Slider section -->
      <div class="marquee-slider" id="marquee-slider">
        <div class="slider-track" id="slider-track">
          {LOGOS.map((logo, index) => (
            <>
              <div class="logo-item">
                <img
                  src={logo.src}
                  alt={logo.alt}
                  style={`height: ${logo.height}px`}
                  width="auto"
                />
              </div>
              {index < LOGOS.length - 1 && <div class="logo-separator"></div>}
            </>
          ))}
          {LOGOS.map((logo, index) => (
            <>
              <div class="logo-item">
                <img
                  src={logo.src}
                  alt={logo.alt}
                  style={`height: ${logo.height}px`}
                  width="auto"
                />
              </div>
              {index < LOGOS.length - 1 && <div class="logo-separator"></div>}
            </>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .enterprise-marquee {
    background: var(--color-black-a);
    padding: 10rem 0;
    width: 100%;
    overflow: hidden;
  }

  .marquee-wrapper {
    margin: 0 auto;
    max-width: var(--maxWidth);
    padding: 0 1.5rem;
  }

  .marquee-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .marquee-content {
      flex-direction: row;
      gap: 0;
    }
  }

  .marquee-text {
    flex-shrink: 0;
    text-align: center;
    max-width: 176px;
  }

  @media (min-width: 768px) {
    .marquee-text {
      text-align: right;
      border-right: 1px solid var(--color-gray-b);
      padding-right: 1.5rem;
    }
  }

  .marquee-text p {
    font-size: 0.875rem;
    color: var(--color-gray-a);
    font-family: var(--font-body);
  }

  .marquee-slider {
    width: 100%;
    padding: 1.5rem 0;
    position: relative;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 80px, black calc(100% - 80px), transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 80px, black calc(100% - 80px), transparent);
  }

  @media (min-width: 768px) {
    .marquee-slider {
      flex: 1;
    }
  }

  .slider-track {
    display: flex;
    gap: 56px;
    width: max-content;
    animation: scroll 30s linear infinite;
  }

  .logo-separator {
    width: 1px;
    height: 32px;
    background-color: rgba(255, 255, 255, 0.2);
    flex-shrink: 0;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .logo-item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .logo-item img {
    filter: invert(1);
    opacity: 0.7;
    width: auto;
    transform: scale(2.5);
  }
</style>

