---
import SecondaryButton from '../UI/SecondaryButton.astro';
import { getLangFromUrl } from '../../i18n/utils.js';
import { translations } from '../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class="diseno-colaboracion">
    <div class="content-column">
        <div class="text-card">
            <div class="text-content">
                <h2 class="heading-2">{t.about.disenoColaboracion.heading}</h2>
            </div>
            <p class="body-1">{t.about.disenoColaboracion.description}</p>
            <div class="button-group">
                <SecondaryButton
                    text={t.about.disenoColaboracion.buttonText}
                    href="https://aldeacreativa.com"
                    target="_blank"
                />
            </div>
        </div>
    </div>
    <div class="image-column">
        <div class="image-wrapper">
            <img
                src="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/DisenoColaboracionInnovacion.webp"
                alt={t.about.disenoColaboracion.imageAlt}
                loading="lazy"
            />
        </div>
    </div>
</section>

<style>
    .diseno-colaboracion {
        height: 100%;
        padding: 50px;
        background: var(--color-black-a);
        overflow: hidden;
        display: flex;
        gap: 10px;
    }

    .content-column {
        width: 50%;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .text-card {
        align-self: stretch;
        padding: 60px;
        background: var(--color-yellow);
        background-image: url('https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/bgGrenContrainer.svg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .text-content {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .text-card h2 {
        color: var(--color-black-a);
        font-family: var(--font-heading);
        font-size: 48px;
        font-weight: 300;
        line-height: 50px;
    }

    .text-card p {
        color: var(--color-black-a);
        font-family: var(--font-body);
        font-size: 20px;
        font-weight: 400;
        line-height: auto;
    }

    .button-group {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .image-column {
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
        gap: 10px;
        padding-top: 280px;
    }

    .image-wrapper {
        width: 100%;
        height: 425px;
        position: relative;
        overflow: hidden;
        border-radius: 10px;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .diseno-colaboracion {
            flex-direction: column;
            padding: 30px;
        }

        .content-column,
        .image-column {
            width: 100%;
        }

        .image-column {
            padding-top: 0;
        }

        .text-card {
            padding: 40px;
        }

        .text-card h2 {
            font-size: 36px;
            line-height: 40px;
        }
    }

    @media (max-width: 768px) {
        .diseno-colaboracion {
            padding: 20px;
        }

        .text-card {
            padding: 30px;
        }

        .text-card h2 {
            font-size: 32px;
            line-height: 36px;
        }

        .text-card p {
            font-size: 16px;
        }

        .button-group {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>
