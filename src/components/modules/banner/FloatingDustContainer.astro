---
import FloatingDust from './FloatingDust';
---

<div class="floating-dust-container">
  <FloatingDust 
    client:load 
    particleCount={400}
    color="255, 255, 255"
  />
</div>

<style>
  .floating-dust-container {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 20;
    pointer-events: none;
    overflow: hidden;
    opacity: 1;
  }
</style>
