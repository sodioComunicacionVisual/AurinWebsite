---
import { BannerBackgroundEffects } from './BannerBackgroundEffects';
---

<div class="banner-background-effects">
  <BannerBackgroundEffects client:load />
</div>

<style>
  .banner-background-effects {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    background: transparent; /* Sin background, usar el InteractiveBackground global */
  }

  .banner-background-effects :global(div) {
    width: 100% !important;
    height: 100% !important;
  }

  .banner-background-effects :global(canvas) {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }
</style>
