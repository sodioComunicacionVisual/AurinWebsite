---
import { BannerBackgroundEffects } from './BannerBackgroundEffects';
---

<div class="banner-background-effects">
  <BannerBackgroundEffects client:load />
</div>

<style>
  .banner-background-effects {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    background: #171717; /* Negro puro */
  }

  /* Cuadr√≠cula manual con CSS puro */
  .banner-background-effects::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.08) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.35;
    z-index: 1;
    pointer-events: none;
    mask-image: radial-gradient(circle at center, black 0%, black 50%, transparent 100%);
    -webkit-mask-image: radial-gradient(circle at center, black 0%, black 50%, transparent 100%);
  }

  .banner-background-effects :global(div) {
    width: 100% !important;
    height: 100% !important;
  }

  .banner-background-effects :global(canvas) {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }
</style>
