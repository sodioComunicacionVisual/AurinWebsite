  projectCategories: [
    'Categoria de Proyecto 1',
    'Categoria de Proyecto 2',
    'Categoria de Proyecto 3'
  ],
  projectDescription: 'Descripción de proyecto',
  bannerImage: undefined, // Opcional: agregar URL de imagen

  caseStudyTitle: 'Titulo de articulo',
