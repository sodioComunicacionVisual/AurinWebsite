---
import Layout from '../../layouts/Layout.astro';
import { PayloadAPI, getImageUrl, PROJECT_FILTERS } from '../../lib/payload';
import { getLangFromUrl } from '../../i18n/utils';
import { translations } from '../../i18n/translations';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];

// Fetch projects from Payload
const projects = await PayloadAPI.getProjects(currentLang);

// SEO
const seoTitle = t.projects?.seo?.title || "Projects - Aurin";
const seoDescription = t.projects?.seo?.description || "Projects developed by Aurin";
---

<Layout
  title={seoTitle}
  description={seoDescription}
>
  <main class="projects-page">
    <section class="hero">
      <div class="container">
        <h1>Projects</h1>
        <p>Explore our portfolio of graphic design, branding and corporate identity projects.</p>
      </div>
    </section>

    <section class="filters">
      <div class="container">
        <h2>Project Filters</h2>
        <div class="filter-buttons" id="filter-buttons">
          {PROJECT_FILTERS.map((filter) => (
            <button
              type="button"
              class={`filter-btn ${filter.value === 'todos' ? 'active' : ''}`}
              data-filter={filter.value}
              data-is-all={filter.value === 'todos'}
            >
              <span class="filter-checkbox">
                <svg class="checkmark" width="12" height="10" viewBox="0 0 12 10" fill="none">
                  <path d="M1 5L4.5 8.5L11 1.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
              <span class="filter-label">{filter.label}</span>
            </button>
          ))}
        </div>
      </div>
    </section>

    <section class="projects-grid">
      <div class="container">
        {projects.length > 0 ? (
          <div class="grid" id="projects-grid">
            {projects.map((project) => (
              <article
                class="project-card"
                data-filters={JSON.stringify(project.projectFilters || [])}
              >
                <a href={`/en/proyecto-payload/${project.slug}`}>
                  <div class="project-image">
                    {project.hero.bannerImage ? (
                      <img
                        src={getImageUrl(project.hero.bannerImage.url)}
                        alt={project.hero.bannerImage.alt || project.title}
                        width={project.hero.bannerImage.width}
                        height={project.hero.bannerImage.height}
                        loading="lazy"
                      />
                    ) : (
                      <div class="placeholder">
                        <span>Project image</span>
                      </div>
                    )}
                  </div>

                  <div class="project-content">
                    <div class="project-meta">
                      {project.featured && (
                        <span class="featured-badge">Featured</span>
                      )}
                    </div>

                    <h3 class="project-title">{project.title}</h3>

                    <div class="project-services">
                      {project.hero.services.slice(0, 3).map((service) => (
                        <span class="service-tag">{service.name}</span>
                      ))}
                      {project.hero.services.length > 3 && (
                        <span class="service-more">+{project.hero.services.length - 3}</span>
                      )}
                    </div>

                    <p class="project-description">{project.hero.description}</p>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <h3>No projects available</h3>
            <p>We will add new projects soon.</p>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>

<script>
  // Multi-filter functionality for projects
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const projectCards = document.querySelectorAll('.project-card');
    const activeFilters = new Set(['todos']);

    function updateProjectsVisibility() {
      projectCards.forEach((card) => {
        const cardFilters = JSON.parse(card.getAttribute('data-filters') || '[]');

        // If "all" is active, show all cards
        if (activeFilters.has('todos')) {
          card.style.display = 'block';
          return;
        }

        // If no filters are active, hide everything
        if (activeFilters.size === 0) {
          card.style.display = 'none';
          return;
        }

        // Show if the project has at least one of the active filters
        const hasMatchingFilter = cardFilters.some((filter: string) =>
          activeFilters.has(filter)
        );

        card.style.display = hasMatchingFilter ? 'block' : 'none';
      });
    }

    filterButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const filterValue = button.getAttribute('data-filter');
        const isAllButton = button.getAttribute('data-is-all') === 'true';

        if (isAllButton) {
          // If "All" is clicked, uncheck all others
          activeFilters.clear();
          activeFilters.add('todos');
          filterButtons.forEach((btn) => btn.classList.remove('active'));
          button.classList.add('active');
        } else {
          // If another filter is clicked, remove "All"
          activeFilters.delete('todos');
          filterButtons.forEach((btn) => {
            if (btn.getAttribute('data-is-all') === 'true') {
              btn.classList.remove('active');
            }
          });

          // Toggle the clicked filter
          if (activeFilters.has(filterValue!)) {
            activeFilters.delete(filterValue!);
            button.classList.remove('active');
          } else {
            activeFilters.add(filterValue!);
            button.classList.add('active');
          }

          // If no filters are active, go back to "All"
          if (activeFilters.size === 0) {
            activeFilters.add('todos');
            filterButtons.forEach((btn) => {
              if (btn.getAttribute('data-is-all') === 'true') {
                btn.classList.add('active');
              }
            });
          }
        }

        updateProjectsVisibility();
      });
    });
  });
</script>

<style>
.projects-page {
  min-height: 100vh;
  padding-top: 2rem;
}

.hero {
  padding: 4rem 0;
  text-align: center;
  background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  color: white;
}

.hero h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
  color: #d0df00;
}

.hero p {
  font-size: 1.2rem;
  opacity: 0.9;
  max-width: 600px;
  margin: 0 auto;
}

.filters {
  padding: 2rem 0;
  background: #f8f9fa;
}

.filters h2 {
  margin-bottom: 1.5rem;
  color: #333;
  font-size: 1.5rem;
}

.filter-buttons {
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1rem;
  border: 2px solid #ddd;
  border-radius: 25px;
  background: white;
  color: #666;
  font-size: 0.95rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.25s ease;
  user-select: none;
}

.filter-btn:hover {
  border-color: #b8c700;
  background: #f9fbe6;
  transform: translateY(-1px);
}

.filter-btn.active {
  border-color: #d0df00;
  background: #d0df00;
  color: #1a1a1a;
  font-weight: 600;
}

.filter-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 18px;
  height: 18px;
  border: 2px solid currentColor;
  border-radius: 4px;
  background: transparent;
  transition: all 0.2s ease;
}

.filter-btn.active .filter-checkbox {
  background: #1a1a1a;
  border-color: #1a1a1a;
}

.checkmark {
  opacity: 0;
  transform: scale(0.5);
  transition: all 0.2s ease;
  color: #d0df00;
}

.filter-btn.active .checkmark {
  opacity: 1;
  transform: scale(1);
}

.filter-label {
  line-height: 1;
}

.projects-grid {
  padding: 4rem 0;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 2rem;
}

.project-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.project-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
}

.project-card a {
  text-decoration: none;
  color: inherit;
  display: block;
}

.project-image {
  aspect-ratio: 16/9;
  overflow: hidden;
}

.project-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.project-card:hover .project-image img {
  transform: scale(1.05);
}

.placeholder {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.project-content {
  padding: 1.5rem;
}

.project-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.category {
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.featured-badge {
  background: #d0df00;
  color: #333;
  padding: 0.25rem 0.5rem;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
}

.project-title {
  font-size: 1.3rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: #333;
}

.project-description {
  color: #666;
  line-height: 1.6;
  margin-bottom: 1rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.project-services {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.service-tag {
  background: #f0f0f0;
  color: #666;
  padding: 0.25rem 0.5rem;
  border-radius: 12px;
  font-size: 0.8rem;
}

.service-more {
  background: #d0df00;
  color: #333;
  padding: 0.25rem 0.5rem;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
}

.empty-state {
  text-align: center;
  padding: 4rem 2rem;
  color: #666;
}

.empty-state h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: #333;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

@media (max-width: 768px) {
  .hero h1 {
    font-size: 2rem;
  }

  .grid {
    grid-template-columns: 1fr;
  }

  .filter-buttons {
    justify-content: center;
  }

  .filter-btn {
    font-size: 0.85rem;
    padding: 0.5rem 0.875rem;
  }

  .filters h2 {
    text-align: center;
    font-size: 1.25rem;
  }
}
</style>
