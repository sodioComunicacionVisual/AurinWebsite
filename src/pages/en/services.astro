---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/UI/Header.astro';
import Footer from '../../components/UI/Footer.astro';
import SBanner from '../../components/Services/SBanner.astro';
import ServicesComponent from '../../components/Services/Services.astro';
import HerramientasVariant from '../../components/Services/HerramientasVariant.astro';
import UxDescription from '../../components/Services/UxDescription.astro';
import MainCat from '../../components/Home/MainCat.astro';
import Projects from '../../components/Home/Projects.astro';
import { getLangFromUrl } from '../../i18n/utils.js';
import { translations } from '../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];

// SEO optimized for LLMs and search engines
const seoTitle = t.services.seo.title;
const seoDescription = t.services.seo.description;
const seoKeywords = t.services.seo.keywords;

// Structured data for SEO (Schema.org)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Visual Communication and Design Services",
  "provider": {
    "@type": "Organization",
    "name": "Aurin",
    "url": "https://aurin.mx",
    "logo": "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/aurinWhiteLogo.webp",
    "contactPoint": {
      "@type": "ContactPoint",
      "email": "hey@aurin.mx",
      "contactType": "customer service"
    }
  },
  "areaServed": "MX",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Design and Visual Communication Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Graphic Design",
          "description": "Professional graphic design services for digital and print media"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Branding and Corporate Identity",
          "description": "Brand development, visual identity and branding strategy"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "UX/UI Design",
          "description": "User experience design and digital interfaces"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Digital Strategy",
          "description": "Digital communication consulting and strategy"
        }
      }
    ]
  }
};

// CSS selectors for speakable content (voice optimization)
const speakable = [".services-banner", ".services-list", ".ux-description"];

---

<Layout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  structuredData={structuredData}
  speakable={speakable}
  canonical="https://aurin.mx/en/services"
  ogImage="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/aurinWhiteLogo.webp"
>
  <Header />
  <SBanner />
  <ServicesComponent />
  <HerramientasVariant />
  <UxDescription />
  <MainCat />
  <Projects />
  <Footer />
</Layout>
