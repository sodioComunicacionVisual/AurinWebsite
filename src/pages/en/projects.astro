---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/ui/Header.astro';
import InteractiveBackground from '../../components/ui/InteractiveBackground.astro';
import StickyFooter from '../../components/ui/StickyFooter.astro';
import Introduction from '../../components/sections/projects/Introduction.astro';
import ProjectsGrid from '../../components/ui/ProjectsGrid.astro';
import FilterPills from '../../components/ui/FilterPills.astro';
import MainCat from '../../components/ui/MainCat.astro';
import { getLangFromUrl } from '../../i18n/utils.js';
import { translations } from '../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];

// SEO optimized for LLMs and search engines
const seoTitle = t.projects.seo.title;
const seoDescription = t.projects.seo.description;
const seoKeywords = t.projects.seo.keywords;

// Structured data for SEO (Schema.org)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Project Portfolio - Aurin",
  "description": seoDescription,
  "url": "https://aurin.mx/en/projects",
  "inLanguage": "en-US",
  "mainEntity": {
    "@type": "Organization",
    "name": "Aurin",
    "url": "https://aurin.mx",
    "logo": "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/aurinWhiteLogo.webp",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Design Project Portfolio",
      "itemListElement": [
        {
          "@type": "CreativeWork",
          "name": t.projects.projectTitles["proyecto-innovador-1"],
          "description": "Branding, UI/UX and web development project",
          "creator": {
            "@type": "Organization",
            "name": "Aurin"
          },
          "keywords": [t.projects.projectTags["Branding"], t.projects.projectTags["UI/UX"], t.projects.projectTags["Web"]]
        },
        {
          "@type": "CreativeWork",
          "name": t.projects.projectTitles["transformacion-digital"],
          "description": "Development and digital strategy project",
          "creator": {
            "@type": "Organization",
            "name": "Aurin"
          },
          "keywords": [t.projects.projectTags["Desarrollo"], t.projects.projectTags["Estrategia"]]
        },
        {
          "@type": "CreativeWork",
          "name": t.projects.projectTitles["experiencia-usuario"],
          "description": "UX research and design project",
          "creator": {
            "@type": "Organization",
            "name": "Aurin"
          },
          "keywords": [t.projects.projectTags["UX Research"], t.projects.projectTags["Design"]]
        }
      ]
    }
  }
};

// CSS selectors for speakable content (voice optimization)
const speakable = [".projects-introduction", ".projects-strip", ".project-card"];

// Canonical URL
const canonicalUrl = "https://aurin.mx/en/projects";
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  structuredData={structuredData}
  speakable={speakable}
  canonical={canonicalUrl}
  ogImage="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/aurinWhiteLogo.webp"
>
  <InteractiveBackground />
  <Header />
  
  <main class="proyectos-page">
    <!-- Introduction Section -->
    <Introduction />

    <!-- Projects Grid - Automatically fetches and displays all projects from Payload CMS -->
    <section class="projects-section">
      <div class="projects-container">
        <!-- Filter Pills -->
        <FilterPills />

        <!-- Projects Grid -->
        <ProjectsGrid />
      </div>
    </section>

    <!-- Call to Action -->
    <MainCat />
  </main>
  
  <StickyFooter />
</Layout>

<style>
  .proyectos-page {
    width: 100%;
    min-height: 100vh;
    padding-top: 80px;
  }

  /* Projects Section */
  .projects-section {
    width: 100%;
    padding: 60px 0;
  }

  .projects-container {
    max-width: var(--maxWidth);
    margin: 0 auto;
    padding: 0 100px;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .projects-container {
      padding: 0 60px;
    }
  }

  @media (max-width: 968px) {
    .projects-container {
      padding: 0 40px;
    }

    .projects-section {
      padding: 40px 0;
    }
  }

  @media (max-width: 768px) {
    .proyectos-page {
      padding-top: 60px;
    }

    .projects-container {
      padding: 0 30px;
    }
  }

  @media (max-width: 640px) {
    .projects-container {
      padding: 0 20px;
    }

    .projects-section {
      padding: 30px 0;
    }
  }
</style>
