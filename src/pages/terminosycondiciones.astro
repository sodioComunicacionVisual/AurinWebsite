---
import Layout from '../layouts/Layout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import MainCat from '../components/ui/MainCat.astro';
import TermsConditions from '../components/sections/t&c/TermsConditions.astro';
import { getLangFromUrl } from '../i18n/utils';
import { translations } from '../i18n/translations';

const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang].termsConditions;
---

<Layout
  title={t.seo.title}
  description={t.seo.description}
  keywords={t.seo.keywords}
>
  <Header />

  <main>
    <TermsConditions lang={currentLang} />
    <MainCat />
  </main>

  <Footer />
</Layout>
